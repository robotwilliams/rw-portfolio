@import "tailwindcss";
@import url("https://fonts.googleapis.com/css2?family=VT323&display=swap");

:root {
  --background: #008080;
  --foreground: #ffffff;
  --desktop-bg: #008080;
  --taskbar-bg: #c0c0c0;
  --window-bg: #c0c0c0;
  --window-border: #000000;
  --button-bg: #c0c0c0;
  --button-border: #000000;
  --text-primary: #000000;
  --text-secondary: #ffffff;
  --accent: #000080;
  --accent-hover: #0000ff;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

/* Retro Desktop Styles */

body {
  background: var(--desktop-bg);
  color: var(--foreground);
  font-family: "VT323", monospace;
  margin: 0;
  padding: 0;
  overflow: hidden;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

/* Desktop Background Pattern */
.desktop-bg {
  background-image: radial-gradient(
      circle at 25% 25%,
      rgba(255, 255, 255, 0.1) 1px,
      transparent 1px
    ),
    radial-gradient(
      circle at 75% 75%,
      rgba(255, 255, 255, 0.1) 1px,
      transparent 1px
    );
  background-size: 50px 50px;
  background-position: 0 0, 25px 25px;
}

/* Taskbar */
.taskbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  background: var(--taskbar-bg);
  border-top: 2px solid var(--window-border);
  display: flex;
  align-items: center;
  padding: 0 8px;
  z-index: 1000;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

/* Window Styles */
.retro-window {
  background: var(--window-bg);
  border: 2px solid var(--window-border);
  border-radius: 0;
  box-shadow: inset 1px 1px 0 rgba(255, 255, 255, 0.5),
    inset -1px -1px 0 rgba(0, 0, 0, 0.3), 2px 2px 4px rgba(0, 0, 0, 0.3);
  font-family: "VT323", monospace;
  image-rendering: pixelated;
}

.window-titlebar {
  background: var(--accent);
  color: var(--text-secondary);
  padding: 4px 8px;
  font-weight: bold;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--window-border);
  cursor: move;
}

.window-content {
  padding: 16px;
  background: var(--window-bg);
  color: var(--text-primary);
  font-size: 16px;
  line-height: 1.4;
}

/* Retro Buttons */
.retro-button {
  background: var(--button-bg);
  border: 2px solid var(--button-border);
  border-radius: 0;
  padding: 4px 12px;
  font-family: "VT323", monospace;
  font-size: 14px;
  cursor: pointer;
  box-shadow: inset 1px 1px 0 rgba(255, 255, 255, 0.5),
    inset -1px -1px 0 rgba(0, 0, 0, 0.3);
  transition: all 0.1s ease;
}

.retro-button:hover {
  background: #d4d4d4;
  box-shadow: inset -1px -1px 0 rgba(255, 255, 255, 0.5),
    inset 1px 1px 0 rgba(0, 0, 0, 0.3);
}

.retro-button:active {
  background: #a0a0a0;
  box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.3),
    inset -1px -1px 0 rgba(255, 255, 255, 0.5);
}

/* Taskbar Icons */
.taskbar-icon {
  width: 32px;
  height: 32px;
  background: var(--button-bg);
  border: 2px solid var(--button-border);
  margin-right: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  cursor: pointer;
  box-shadow: inset 1px 1px 0 rgba(255, 255, 255, 0.5),
    inset -1px -1px 0 rgba(0, 0, 0, 0.3);
}

.taskbar-icon.active {
  background: var(--accent);
  color: var(--text-secondary);
}

/* Desktop Icons */
.desktop-icon {
  width: 64px;
  height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  padding: 4px;
  border: 1px solid transparent;
  border-radius: 0;
  text-align: center;
  font-size: 12px;
  color: var(--text-secondary);
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.8);
}

.desktop-icon:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
}

.desktop-icon.selected {
  background: rgba(0, 0, 128, 0.5);
  border-color: rgba(255, 255, 255, 0.5);
}

/* Scrollbars */
::-webkit-scrollbar {
  width: 16px;
}

::-webkit-scrollbar-track {
  background: var(--button-bg);
  border: 1px solid var(--button-border);
}

::-webkit-scrollbar-thumb {
  background: var(--accent);
  border: 1px solid var(--button-border);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent-hover);
}

/* Form Elements */
.retro-input {
  background: var(--text-secondary);
  border: 2px solid var(--button-border);
  border-radius: 0;
  padding: 8px;
  font-family: "VT323", monospace;
  font-size: 16px;
  color: var(--text-primary);
  box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.3),
    inset -1px -1px 0 rgba(255, 255, 255, 0.5);
}

.retro-textarea {
  background: var(--text-secondary);
  border: 2px solid var(--button-border);
  border-radius: 0;
  padding: 8px;
  font-family: "VT323", monospace;
  font-size: 16px;
  color: var(--text-primary);
  resize: vertical;
  box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.3),
    inset -1px -1px 0 rgba(255, 255, 255, 0.5);
}

/* Links */
.retro-link {
  color: var(--accent);
  text-decoration: underline;
  cursor: pointer;
}

.retro-link:hover {
  color: var(--accent-hover);
}

/* Prose styles for markdown content */
.prose {
  color: var(--text-primary);
  max-width: 65ch;
  font-family: "VT323", monospace;
}

.prose h1 {
  color: var(--text-primary);
  font-weight: bold;
  font-size: 2.25em;
  margin-top: 0;
  margin-bottom: 0.8888889em;
  line-height: 1.1111111;
}

.prose h2 {
  color: var(--text-primary);
  font-weight: bold;
  font-size: 1.5em;
  margin-top: 2em;
  margin-bottom: 1em;
  line-height: 1.3333333;
}

.prose h3 {
  color: var(--text-primary);
  font-weight: bold;
  font-size: 1.25em;
  margin-top: 1.6em;
  margin-bottom: 0.6em;
  line-height: 1.6;
}

.prose h4 {
  color: var(--text-primary);
  font-weight: bold;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
  line-height: 1.5;
}

.prose p {
  margin-top: 1.25em;
  margin-bottom: 1.25em;
}

.prose ul {
  margin-top: 1.25em;
  margin-bottom: 1.25em;
  padding-left: 1.625em;
}

.prose ol {
  margin-top: 1.25em;
  margin-bottom: 1.25em;
  padding-left: 1.625em;
}

.prose li {
  margin-top: 0.5em;
  margin-bottom: 0.5em;
}

.prose strong {
  color: var(--text-primary);
  font-weight: bold;
}

.prose a {
  color: var(--accent);
  text-decoration: underline;
  font-weight: bold;
}

.prose a:hover {
  color: var(--accent-hover);
}

.prose blockquote {
  font-weight: bold;
  font-style: italic;
  color: var(--text-primary);
  border-left-width: 0.25rem;
  border-left-color: var(--accent);
  quotes: "\201C""\201D""\2018""\2019";
  margin-top: 1.6em;
  margin-bottom: 1.6em;
  padding-left: 1em;
}

.prose code {
  color: var(--text-primary);
  font-weight: bold;
  font-size: 0.875em;
  background: var(--text-secondary);
  padding: 2px 4px;
  border: 1px solid var(--button-border);
}

.prose pre {
  color: var(--text-secondary);
  background-color: var(--text-primary);
  overflow-x: auto;
  font-weight: bold;
  font-size: 0.875em;
  line-height: 1.7142857;
  margin-top: 1.7142857em;
  margin-bottom: 1.7142857em;
  border-radius: 0;
  padding-top: 0.8571429em;
  padding-right: 1.1428571em;
  padding-bottom: 0.8571429em;
  padding-left: 1.1428571em;
  border: 2px solid var(--button-border);
}

.prose pre code {
  background-color: transparent;
  border-width: 0;
  border-radius: 0;
  padding: 0;
  font-weight: bold;
  color: inherit;
  font-size: inherit;
  font-family: inherit;
  line-height: inherit;
}

.prose table {
  width: 100%;
  table-layout: auto;
  text-align: left;
  margin-top: 2em;
  margin-bottom: 2em;
  border: 2px solid var(--button-border);
}

.prose thead {
  color: var(--text-secondary);
  font-weight: bold;
  background: var(--accent);
  border-bottom-width: 1px;
  border-bottom-color: var(--button-border);
}

.prose thead th {
  vertical-align: bottom;
  padding-right: 0.5714286em;
  padding-bottom: 0.5714286em;
  padding-left: 0.5714286em;
}

.prose tbody tr {
  border-bottom-width: 1px;
  border-bottom-color: var(--button-border);
}

.prose tbody tr:nth-child(2n) {
  background-color: rgba(0, 0, 0, 0.05);
}

.prose tbody td {
  vertical-align: baseline;
  padding: 0.5714286em;
}

.prose img {
  margin-top: 2em;
  margin-bottom: 2em;
  border: 2px solid var(--button-border);
  image-rendering: pixelated;
}

.prose video {
  margin-top: 2em;
  margin-bottom: 2em;
  border: 2px solid var(--button-border);
}

.prose figure {
  margin-top: 2em;
  margin-bottom: 2em;
}

.prose figure > * {
  margin-top: 0;
  margin-bottom: 0;
}

.prose h2 code {
  font-size: 0.875em;
}

.prose h3 code {
  font-size: 0.9em;
}

.prose ul > li > *:first-child {
  margin-top: 1.25em;
}

.prose ul > li > *:last-child {
  margin-bottom: 1.25em;
}

.prose ol > li > *:first-child {
  margin-top: 1.25em;
}

.prose ol > li > *:last-child {
  margin-bottom: 1.25em;
}

.prose ul ul,
.prose ul ol,
.prose ol ul,
.prose ol ol {
  margin-top: 0.75em;
  margin-bottom: 0.75em;
}

.prose hr + * {
  margin-top: 0;
}

.prose h2 + * {
  margin-top: 0;
}

.prose h3 + * {
  margin-top: 0;
}

.prose h4 + * {
  margin-top: 0;
}

.prose h6 + * {
  margin-top: 0;
}

.prose thead th:first-child {
  padding-left: 0;
}

.prose thead th:last-child {
  padding-right: 0;
}

.prose tbody td:first-child {
  padding-left: 0;
}

.prose tbody td:last-child {
  padding-right: 0;
}

.prose > :first-child {
  margin-top: 0;
}

.prose > :last-child {
  margin-bottom: 0;
}
